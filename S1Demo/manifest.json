{
  "manifest_version": 2,
  "name": "S1 Demo",
  "description": "Opens Salesforce1 Mobile in a new phone-sized window.",
  "version": "1.2",
  "icons": { "128": "iphone.png" },
  "background": {
      "scripts": ["background.js"]
  },
  "permissions": [
    "tabs",
    "*://*.salesforce.com/",
    "*://*.force.com/",
    "webRequest",
    "*://*.salesforce.com/",
    "*://*.force.com/",
    "webRequestBlocking",
    "*://*.salesforce.com/",
    "*://*.force.com/"
  ],
    "page_action": {
      "default_name": "S1 Demo",
      "default_icon": "iphone.png"
  }
}